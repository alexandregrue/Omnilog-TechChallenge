{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="login">
    <h1>Mon outil de prise de note</h1>
    <form action="{{ path('login') }}" method="post">
        <label for="username">Email :</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="exemple@omnilog.fr"/>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="_password" placeholder="Votre mot de passe"/>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button type="submit">Connexion</button>
    </form>
</div>
{% endblock %}
